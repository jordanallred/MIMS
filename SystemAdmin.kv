#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import Button kivy.uix.button.Button
#: include ManageUsers.kv
#: include CheckSecurity.kv

<Button>:
    background_color: 0.8, 0.8, 1, 1

<SystemAdmin>:
    orientation: "vertical"
    padding: 10
    spacing: 10

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "background.png"

    BoxLayout:
        padding: 10
        spacing: 10
        orientation: "vertical"
        Label:
            font_size: 36
            text: "System Administrator Jobs"
        Button:
            text: "Manage Users"
            font_size: 32
            on_press: root.manage_users()
        Button:
            text: "System Maintenance"
            font_size: 32
            on_press: root.system_maintenance()
        Button:
            text: "Check Security"
            font_size: 32
            on_press: root.check_security()
    BoxLayout:
        orientation: "horizontal"
        Button:
            size_hint: (0.5, 0.25)
            text: "Log Out"
            font_size: 32
            on_press: root.disconnect()