#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import Button kivy.uix.button.Button
#: include MakeAppointment.kv
#: include CollectPayment.kv

<Button>:
    background_color: 0.8, 0.8, 1, 1

<NMPIS>:
    orientation: "vertical"
    padding: 10
    spacing: 10

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "background.png"

    BoxLayout:
        padding: 10
        spacing: 10
        orientation: "vertical"
        Label:
            font_size: 36
            text: "Non-Medical Patient Interaction Staff Jobs"
        Button:
            text: "Collect Payment"
            font_size: 32
            on_press: root.collect_payment()
        Button:
            text: "Make Appointment"
            font_size: 32
            on_press: root.make_appointment()
    BoxLayout:
        orientation: "horizontal"
        Button:
            size_hint: (0.5, 0.25)
            text: "Log Out"
            font_size: 32
            on_press: root.disconnect()