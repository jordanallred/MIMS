#: include SystemAdmin.kv
#: include MPIS.kv
#: include NMPIS.kv
#: include MedicalProfessional.kv
#: include ManagementStaff.kv
#: import Button kivy.uix.button.Button

<Button>:
    background_color: 0.8, 0.8, 1, 1

<Login>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "background.png"

    BoxLayout
        id: login_layout
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Label:
            text: 'Medical Information Management System'
            font_size: 40


        Spinner:
            id: role_spinner
            text: 'Role'
            font_size: 20
            values: ('System Administrator', 'Nurse', 'Medical Technician', 'Nurse Practitioner', 'Clerk', 'Accountant', 'Doctor', 'Pharmacist', 'President', 'Inventory Manager', 'Staff Manager', 'Department Head')
            size_hint: (1, None)
            size: (100, 44)
            pos_hint: {'center_x': .5, 'center_y': .5}

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Login'
                font_size: 18
                size_hint: (1, 0.2)
                halign: 'left'
                text_size: root.width-20, 20

            TextInput:
                id: login
                size_hint: (1, None)
                size: (100, 44)
                multiline:False
                font_size: 18

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Password'
                halign: 'left'
                font_size: 18
                text_size: root.width-20, 20

            TextInput:
                id: password
                size_hint: (1, None)
                size: (100, 44)
                multiline:False
                password:True
                font_size: 18

        Button:
            text: 'Log in'
            font_size: 20
            size_hint: (1, None)
            size: (100, 44)
            on_press: root.do_login(login.text, password.text, role_spinner.text)