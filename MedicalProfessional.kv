#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import Button kivy.uix.button.Button
#: include ManagePatientsAdmin.kv
#: include ManageReportsAdmin.kv
#: include OrderServiceAdmin.kv

<Button>:
    background_color: 0.8, 0.8, 1, 1

<MedicalProfessional>:
    orientation: "vertical"
    padding: 10
    spacing: 10

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "background.png"

    BoxLayout:
        padding: 10
        spacing: 10
        orientation: "vertical"
        Label:
            font_size: 36
            text: "Medical Professional Jobs"
        Button:
            text: "Manage Patients"
            font_size: 32
            on_press: root.manage_patients()
        Button:
            text: "Manage Report"
            font_size: 32
            on_press: root.manage_reports()
        Button:
            text: "Order Service"
            font_size: 32
            on_press: root.order_service()
    BoxLayout:
        orientation: "horizontal"
        Button:
            size_hint: (0.5, 0.25)
            text: "Log Out"
            font_size: 32
            on_press: root.disconnect()